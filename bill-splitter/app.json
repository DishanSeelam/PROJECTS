{
  "expo": {
    "name": "bill-splitter",
    "slug": "bill-splitter",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
          "ios": {
        "supportsTablet": true,
        "infoPlist": {
          "NSCameraUsageDescription": "This app uses the camera to capture receipts for splitting."
        }
      },
          "android": {
        "adaptiveIcon": {
          "foregroundImage": "./assets/adaptive-icon.png",
          "backgroundColor": "#ffffff"
        },
        "edgeToEdgeEnabled": true,
        "permissions": ["CAMERA"]
      },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
